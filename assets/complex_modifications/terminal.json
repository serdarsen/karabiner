{
  "title": "Terminal shortcuts",
  "rules": [
    {
      "description": "Control-Z to Command-Period(.) on Terminal",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "period",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
                "type": "frontmost_application_if",
                "bundle_identifiers": ["^com\\.apple\\.Terminal$"]
            }
          ]
        }
      ]
    }
  ]
}