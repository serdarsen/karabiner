{
  "title": "Desktop Shortcuts",
  "rules": [
    {
      "description": "Control–Command–Up Arrow to Switch to Desktop 1",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "1",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control–Command–Down Arrow to Switch to Desktop 3",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "3",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control–Command–Left Arrow to Option–Left Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control–Command–Right Arrow to Option–Right Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Option to Mission Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option"
          },
          "to": [
            {
              "key_code": "left_option",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "mission_control"
            }
          ]
        }
      ]
    }
  ]
}